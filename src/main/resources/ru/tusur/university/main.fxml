    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
            <AnchorPane layoutX="19.0" layoutY="14.0" prefHeight="345.0" prefWidth="602.0">
               <children>
                  <Label alignment="CENTER" layoutX="149.0" layoutY="14.0" prefHeight="28.0" prefWidth="315.0" text="Университет" textAlignment="CENTER">
